<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Vagmobile" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color (акцент) -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/navigation_header</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_inverse</item>
        <item name="colorSecondaryVariant">@color/navigation_header</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navigation_header</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_primary</item>
        <item name="colorOnSurfaceVariant">@color/on_secondary_light</item>
        <item name="colorOutline">@color/on_secondary_light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/on_secondary_light</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background_primary</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Vagmobile" parent="Base.Theme.Vagmobile" />
</resources>